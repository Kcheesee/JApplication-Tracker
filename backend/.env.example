# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/jobtracker

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379/0

# JWT Secret (generate a secure random string)
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption Key for API Keys (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here-generate-new-one

# Environment
ENVIRONMENT=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional - for sending notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google OAuth (for Gmail integration)
GOOGLE_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-here

# LLM Provider Configuration
# Supported: anthropic, openai, google, openrouter
DEFAULT_LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here
GOOGLE_API_KEY=your-google-key-here
OPENROUTER_API_KEY=your-openrouter-key-here
